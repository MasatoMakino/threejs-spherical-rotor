{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
  },
  "include": ["src/**/*"]
}
