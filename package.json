    "three": ">=0.126.0 <1.0.0"
  },
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.8.3",
    "@types/three": "^0.167.1",
    "@types/webxr": "^0.5.19",
    "@vitest/coverage-istanbul": "^2.0.4",
    "browser-sync": "^3.0.2",
    "husky": "^9.1.4",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "three": "^0.167.0",
