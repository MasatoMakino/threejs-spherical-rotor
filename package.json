{
  "name": "threejs-spherical-rotor",
  "version": "0.3.2",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "description": "Loop rotation plugin for threejs-spherical-controls.",
  "repository": "https://MasatoMakino@github.com/MasatoMakino/threejs-spherical-rotor.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "threejs-drag-watcher": "MasatoMakino/threejs-drag-watcher",
    "threejs-spherical-controls": "MasatoMakino/threejs-spherical-controls"
  },
  "peerDependencies": {
    "@tweenjs/tween.js": ">=18.6.4 <19.0.0",
    "three": ">=0.126.0 <1.0.0"
  },
  "devDependencies": {
    "@tweenjs/tween.js": "^18.6.4",
    "@types/three": "^0.134.0",
    "gulptask-demo-page": "MasatoMakino/gulptask-demo-page",
    "gulptask-dev-server": "MasatoMakino/gulptask-dev-server",
    "husky": "^7.0.4",
    "prettier": "^2.5.0",
    "pretty-quick": "^3.1.2",
    "three": "^0.135.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run demo & npm run buildTS",
    "demo": "npx gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"640\" height=\"480\"></canvas>'",
    "buildTS": "npx tsc --project tsconfig.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged"
    }
  }
}
