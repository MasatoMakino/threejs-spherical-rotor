    "three": ">=0.126.0 <1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@masatomakino/gulptask-demo-page": "^0.10.0",
    "@masatomakino/threejs-drag-watcher": "^0.13.0",
    "@masatomakino/threejs-spherical-controls": "^0.10.1",
    "@types/three": "^0.181.0",
    "@types/webxr": "^0.5.19",
