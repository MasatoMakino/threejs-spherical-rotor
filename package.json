{
  "name": "@masatomakino/threejs-spherical-rotor",
  "version": "0.6.2",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "description": "Loop rotation plugin for threejs-spherical-controls.",
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/threejs-spherical-rotor.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "three": ">=0.126.0 <1.0.0",
    "@masatomakino/threejs-spherical-controls": "^0.6.0"
  },
  "dependencies": {
    "@masatomakino/threejs-drag-watcher": "^0.8.1"
  },
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.7.0",
    "@types/jest": "^29.5.2",
    "@types/three": "^0.155.0",
    "browser-sync": "^2.29.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "test": "npx jest",
    "coverage": "npx jest --coverage",
    "prepare": "husky install",
    "preversion": "git checkout main && git pull && npm ci && npm run test",
    "postversion": "git add package.json package-lock.json && git checkout -b version/$(git describe --tags --abbrev=0)",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run typedocs & npm run demo",
    "demo": "npm run buildTS && npx @masatomakino/gulptask-demo-page",
    "buildTS": "tsc --project tsconfig.cjs.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx browser-sync ./docs/demo -w",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.cjs.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-spherical-rotor/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-spherical-rotor#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
